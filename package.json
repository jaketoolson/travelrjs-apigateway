{
  "name": "travelr-js.services.api-gateway",
  "version": "1.0.0",
  "description": "API Gateway",
  "author": "Jake Toolson",
  "repository": {
    "type": "git",
    "url": "https://github.com/jaketoolson/travelr-js"
  },
  "main": "dist/server.js",
  "scripts": {
    "build": "npm run clean && tsc -p tsconfig.json",
    "build:prod": "npm run clean && tsc -p tsconfig.release.json",
    "clean": "rimraf dist",
    "copy:assets": "ts-node copyStaticAssets.ts",
    "serve": "node dist/server.js",
    "serve:debug": "NODE_ENV=development node dist/server.js",
    "start": "npm run serve",
    "watch": "onchange --await-write-finish 500 -i \".src/***/*.ts*\" -- npm run build",
    "watch:node": "nodemon dist/server.js",
    "watch:ts": "tsc -w tsconfig.json",
    "watch:post_process": "docker restart nj_gateway"
  },
  "dependencies": {
    "@hapi/hapi": "20.0.1",
    "@hapi/inert": "^6.0.3",
    "akaya": "^3.0.2",
    "axios": "^0.20.0",
    "dotenv": "^8.2.0",
    "jsonapi-serializer": "^3.6.6",
    "lodash": "^4.17.20",
    "qs": "^6.9.4",
    "winston": "^3.2.1"
  },
  "devDependencies": {
    "@types/hapi": "^18.0.4",
    "@types/hapi__hapi": "^20.0.2",
    "@types/hapi__inert": "^5.2.1",
    "@types/cors": "^2.8.6",
    "@types/node": "^14.0.6",
    "@types/shelljs": "^0.8.8",
    "chai": "^4.1.2",
    "chai-as-promised": "^7.1.1",
    "faker": "^4.1.0",
    "file-loader": "1.1.6",
    "mocha": "^7.2.0",
    "onchange": "^7.1.0",
    "nodemon": "^2.0.4",
    "rimraf": "^3.0.2",
    "shelljs": "^0.8.4",
    "tsc-watch": "^4.2.8",
    "typescript": "^3.9.3"
  },
  "engines": {
    "node": ">= 8",
    "npm": "^5.0.0"
  }
}
